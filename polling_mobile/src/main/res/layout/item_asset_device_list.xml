<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dimens_10"
    android:paddingTop="@dimen/dimens_10">

    <TextView
        android:id="@+id/item_label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_10"
         />

    <TextView
        android:layout_toRightOf="@+id/item_label_id"
        android:id="@+id/item_value_id"
        android:layout_marginLeft="@dimen/dimens_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />


</RelativeLayout>
