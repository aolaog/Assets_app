<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cdhxqh.polling_mobile.ui.fragment.ResultFragment"
    >

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:foreground="?android:selectableItemBackground"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/window_background"
        card_view:cardCornerRadius="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linear_layout_2_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimens_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/asset_device_text" />

                    <TextView
                        android:id="@+id/asset_device_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/not_have_data_hint" />
                </LinearLayout>

                <View
                    android:id="@+id/view_2_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear_layout_2_id"
                    android:background="@drawable/line"></View>

                <LinearLayout
                    android:id="@+id/linear_layout_3_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_2_id"
                    android:padding="@dimen/dimens_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/asset_task_id" />

                    <TextView
                        android:id="@+id/asset_task_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/not_have_data_hint" />
                </LinearLayout>

                <View
                    android:id="@+id/view_3_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear_layout_3_id"
                    android:background="@drawable/line"></View>

                <LinearLayout
                    android:id="@+id/linear_layout_4_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_3_id"
                    android:padding="@dimen/dimens_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/asset_inspect_time" />

                    <TextView
                        android:id="@+id/asset_inspect_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/not_have_data_hint" />
                </LinearLayout>

                <View
                    android:id="@+id/view_4_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear_layout_4_id"
                    android:background="@drawable/line"></View>

                <LinearLayout
                    android:id="@+id/linear_layout_5_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_4_id"
                    android:padding="@dimen/dimens_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/asset_inspectuser_id" />

                    <TextView
                        android:id="@+id/asset_inspectuser_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/not_have_data_hint" />
                </LinearLayout>

                <View
                    android:id="@+id/view_5_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear_layout_5_id"
                    android:background="@drawable/line"></View>

                <RelativeLayout
                    android:id="@+id/linear_layout_6_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_5_id"
                    android:paddingLeft="@dimen/dimens_15"
                    android:paddingRight="@dimen/dimens_15">

                    <TextView
                        android:id="@+id/status_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="状态:" />

                    <Spinner
                        android:id="@+id/spinnerBase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:layout_marginLeft="@dimen/dimens_5"
                        android:layout_toRightOf="@+id/status_name_text"
                        android:spinnerMode="dialog" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_6_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear_layout_6_id"
                    android:background="@drawable/line"></View>

                <RelativeLayout
                    android:id="@+id/linear_layout_7_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_6_id"
                    android:paddingLeft="@dimen/dimens_15"
                    android:paddingRight="@dimen/dimens_15">

                    <TextView
                        android:id="@+id/task_problem_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/task_problem_text" />

                    <Spinner
                        android:id="@+id/spinner_problem_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimens_5"
                        android:layout_toRightOf="@+id/task_problem_text_id"
                        android:spinnerMode="dialog" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_7_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear_layout_7_id"
                    android:background="@drawable/line"></View>

                <LinearLayout
                    android:id="@+id/linear_layout_8_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_7_id"
                    android:padding="@dimen/dimens_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/task_problem_desc" />


                </LinearLayout>

                <View
                    android:id="@+id/view_8_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear_layout_8_id"
                    android:background="@drawable/line"></View>

                <LinearLayout
                    android:id="@+id/linear_layout_9_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_8_id">

                    <EditText
                        android:id="@+id/task_problem_desc_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/textfield_default"
                        android:hint="请输入问题描述"
                        android:textColor="@color/share_dialog_item"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view_9_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear_layout_9_id"
                    android:background="@drawable/line"></View>

                <RelativeLayout
                    android:id="@+id/relativelayout_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_layout_9_id"
                    android:padding="@dimen/dimens_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/asset_image" />

                    <ImageView
                        android:id="@+id/asset_image_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:src="@android:drawable/ic_menu_camera" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_10_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/relativelayout_id"
                    android:background="@drawable/line"></View>

                <RelativeLayout
                    android:id="@+id/relativelayout__1_id"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/view_10_id"
                    android:padding="@dimen/dimens_15">

                    <ImageView
                        android:id="@+id/asset_not_image_id"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/not_image" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:horizontalSpacing="2dp"></android.support.v7.widget.RecyclerView>

                </RelativeLayout>

                <View
                    android:id="@+id/view_11_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/relativelayout__1_id"
                    android:background="@drawable/line"></View>
            </RelativeLayout>
        </ScrollView>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/asset_submit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/dimens_10"
        android:layout_marginRight="@dimen/dimens_10"
        android:background="@drawable/umeng_update_button_ok_bg_normal"
        android:text="@string/submit_button" />
</FrameLayout>
